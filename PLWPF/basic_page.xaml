<UserControl x:Class="PLWPF.basic_page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d"

             d:DesignHeight="350" d:DesignWidth="800">
    <Grid >

        <Grid.RowDefinitions>

            <RowDefinition Height="267*"/>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" >
            <Image Source="images/main_image7.JPG" Stretch="Fill"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="100" Margin="60,200,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.809,-0.433">
            <Button x:Name="mute_or_not" Click="mute_Click" Background="Transparent" Visibility="Visible">
                <Image x:Name="mute" Stretch="Fill" Source="images/sound.png"/>
            </Button>
            <Button x:Name="sound_or_not" Click="sound_Click" Background="Transparent" Visibility="Hidden">
                <Image x:Name="sound" Stretch="Fill" Source="images/mute.png"/>
            </Button>
        </Grid>




    </Grid>
</UserControl>