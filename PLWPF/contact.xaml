<UserControl x:Class="PLWPF.contact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <local:basic_page x:Name="bssic_page"/>
        <Grid HorizontalAlignment="Left" Height="260" Margin="0,49,0,0" VerticalAlignment="Top" Width="790">
            <Image x:Name="contact_explanation" Source="images/contact2.png" Stretch="Fill" />
        </Grid>
        <Image x:Name="contact_down" Grid.Row="1" Source="images/contact_down.png" Stretch="Fill"/>


    </Grid>
</UserControl>
